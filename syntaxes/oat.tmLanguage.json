{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "OAT",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#types"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.oat",
					"match": "\\b(if|while|for|return|else)\\b"
				},
				 {
					"name": "keyword.declaration.oat",
					"match": "\\b(var|new|global|struct)\\b"
				 }
			]
		},
		"strings": {
			"name": "string.quoted.double.oat",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.oat",
					"match": "\\\\."
				}
			]
		},
		"types": {
			"patterns": [
				{
					"name": "storage.builtin.types.oat",
					"match": "\\b(int|true|false|string|void|bool)\\b"
				}
			]
		}
	},
	"scopeName": "source.oat"
}